h1#stats.big Statistics
.row
    .col-xs-6.col-md-4.col-lg-3
        label(for='github') GitHub Stats
        a(href='https://github.com/code-ee', target='_blank')
            img#github.projImage.img-lnk(src='images/github.png', alt='GitHub')
    .col-xs-6.col-md-4.col-lg-3
        label(for='repos') Public Repositories
        .statText.repositories#repos
            .big
                a#a-repos.img-lnk(href='https://github.com/code-ee?tab=repositories', target='_blank') ..
    .col-xs-6.col-md-4.col-lg-3
        label(for='contrb') Contributions This Year
        .statText.contributions#contrb
            .big
                a#a-contrb.img-lnk(href='https://github.com/code-ee?tab=overview&from=2017-06-01&to=2017-06-23', target='_blank') ..
    .col-xs-6.col-md-4.col-lg-3
        label(for='follows') Followers
        .statText.followers#follows
            .big
                a#a-follows.img-lnk(href='https://github.com/code-ee?tab=followers', target='_blank') ..

script.
    $(document).ready(function () {
        $.ajax({
            type: 'get',
            url: 'http://localhost:5000/REST/getStats',
            dataType: 'json',
            data: {
                'date': '1991/07/11'
            },
            success: function (data, status) {
                $('#a-repos').text(data.repositories);
                $('#a-contrb').text(data.contributions);
                $('#a-follows').text(data.followers);
            },
            complete: function (data, status) {
                //alert(status);
            }
        });
    });
